{
  "$schema": "https://cdn.scalar.com/schema/scalar-config-next.json",
  "scalar": "2.0.0",
  "info": {
    "title": "Quick Start",
    "description": "Getting started with Scalar"
  },
  "siteConfig": {
    "logo": {
      "darkMode": "https://cdn.scalar.com/marketing/landing/logo-dark.svg",
      "lightMode": "https://cdn.scalar.com/marketing/landing/logo-light.svg"
    }
  },
  "navigation": {
    "routes": {
      "/": {
        "type": "group",
        "title": "Quick Start",
        "children": {
          "/": {
            "type": "page",
            "filepath": "docs/content/quickstart.md",
            "title": "Quickstart",
            "icon": "phosphor/regular/fast-forward"
          },
          "/configuration": {
            "type": "page",
            "filepath": "docs/content/configuration.md",
            "title": "Configuration",
            "icon": "phosphor/regular/gear"
          },
          "/development": {
            "type": "page",
            "filepath": "docs/content/development.md",
            "title": "Development",
            "icon": "phosphor/regular/code"
          },
          "/api-reference": {
            "type": "page",
            "filepath": "docs/content/api-reference.md",
            "title": "API Reference",
            "icon": "phosphor/regular/notebook"
          },
          "/api": {
            "type": "openapi",
            "filepath": "docs/api-reference/openapi.yaml",
            "title": "Example API",
            "icon": "phosphor/regular/plug"
          }
        }
      }
    }
  }
}
